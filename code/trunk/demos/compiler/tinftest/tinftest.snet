net boxwrap {
  box b ((A) -> (B)|(B));
} connect b;

net netwrap
connect boxwrap;

net filtwrap
connect [{B} if <1==2> -> {C=B}; {<d=3>}
             if <1==3> ->
             else -> {B}];

net syncwrap
connect [|{A},{B,C},{<d>}|];

net dotdot {
  net extLeft ({C}->{A,<#b>},{D}->{<#dead>}|{A});
  net extRight ({A,B,<#b>}->{},{C,D}->{});
} connect extLeft .. extRight;

net bar {
  net a ({A}->{B},{C}->{D});
  net b ({A} -> {C}|{D});
} connect a | b;

net nil {
  net a connect [|{A},{B}|];
  net b connect [{A,B}->];
} connect a || b;

net star {
  net inner ( {A}->{B}, {B}->{A}|{C}|{D} );
} connect inner * {D};

net ex
connect star!<d>;
