<!-- Test for namespaces and observer -->
<metadata xmlns="snet.feis.herts.ac.u"><!-- Wrong namespace-->
  <net name="failingmetadatatest/split" >
     <observer type="after">
       <snet:stag>T</snet:stag>
     </observer>
  </net>
</metadata>

type A = {A};
typesig A2P = A -> {P};
typesig compAB_t = A2P, {B} -> {Q};

net compABC ({A} | {C} -> {P}, {B} -> {Q}) {
    box compA ((A) -> (P));
    box compB ((B) -> (Q));
    box compC ((C) -> (P));
}
connect compA || compB || compC;

net failingmetadatatest {

    <?xml version="1.0"?>
    <snet:metadata >
      <snet:box name="examine" >
        <snet:observer type="after">
          <snet:field>I</snet:field> <!-- Unknown field -->
          <snet:field>Y</snet:field>
        </snet:observer>
        <snet:observer type="both"> <!-- Conflict in types -->
          <snet:field>Q</snet:field>
        </snet:observer>
      </snet:box>
      <snet:net name="compute">
        <snet:net name="syncPQ">
          <snet:observer type="before" />
        </snet:net>
      </snet:net>
      <snet:net name="compute">
        <snet:net name="syncPQ">
          <snet:observer type="after" />
          <snet:observer /> <!-- No type attribute -->
        </snet:net>
      </snet:net>
    </snet:metadata>

    net split
    connect [{A,B,<T>} -> {A,<T>}; {B,<T>}];

    box examine((P,Q) -> (A,B) | (Y,Z));

    net compute {
	net compAB (compAB_t)	
        connect compABC;

        net syncPQ
        connect [|{P},{Q}|] ** {P,Q};
    }
    connect ([{<T>} -> {}] .. compAB .. syncPQ) !! <T>;
}
connect (split .. compute .. examine) ** {Y,Z};
