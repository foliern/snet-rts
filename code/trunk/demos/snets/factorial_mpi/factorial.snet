net factorial
{
        box leq1( (x) -> (x,p));
        box condif( (p) -> (<T>) | (<F>));

        net compute
        {
                box sub( (x) -> (xx));
                box mult( (xm,rm) -> (rrm));
        }
        connect [{<F>,x,r} -> {xm=x,rm=r}; {x=x}] .. 
					(sub@0|mult@1) .. 
					  ([|{xx},{rrm} |]*{xx,rrm})@2 ..
					    [{xx,rrm}->{x=xx,r=rrm}];

}
connect ((leq1 .. condif)@1 .. ([{<T>} -> {<stop>}] | compute@3))*{<stop>};


