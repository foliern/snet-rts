$(PROJECT_ROOT)/bin/snetc: global/build.o 
	@$(ECHO) ""
	@$(ECHO) "Linking $(PREFIX_ROOT)bin/snetc (developer version)"
	$(HIDE) $(CC)  -o $@ $(TARGETDIRS_DEVEL) $< \
                $(LIB) $(LIBS) $(LIBS_LEX) $(LDDYNFLAGS) $(RPATH) $(UTILLIB)\
                -l$(COMMONLIBDEV) -l$(UTILDEV)
	@$(RM) .make_track
	@$(TOUCH) .done

