void 
SNetConsLstNodeInit(snet_conslst_node_t *n)
{
    assert(n != NULL);

    SNetBaseTypeInit(&n->base);
    SNetBaseTypeSetPlacesDefault(&n->base);

    n->state       = CONS_NODE_STATE_INIT;
    n->lst         = NULL;
    n->rec         = NULL;
    n->ord_idx     = NULL;
    n->dyn_idx     = NULL;
    n->min_idx     = SNetIdxVecCreate();
    n->gnode       = NULL;
    n->next        = NULL;
    n->prev        = NULL;
    n->mult_cnt    = 0;
    n->dyn_idx_cnt = 0;
    n->flags       = 0;
}

snet_conslst_node_t* 
SNetConsLstNodeCreate()
{
    snet_conslst_node_t *node = 
        (snet_conslst_node_t *)
            SNetMemAlloc(sizeof(snet_conslst_node_t));

    SNetConsLstNodeInit(node);

    return node;
}

/*----------------------------------------------------------------------------*/

void
SNetConsLstNodeDestroy(snet_conslst_node_t *n)
{
    assert(n != NULL);
    assert(n->lst == NULL);
    assert(n->next == NULL);

    if (n->ord_idx != NULL)
        SNetIdxVecDestroy(n->ord_idx);

    if (n->dyn_idx != NULL)
        SNetIdxVecDestroy(n->dyn_idx);

    if (n->min_idx != NULL)
        SNetIdxVecDestroy(n->min_idx);

    SNetBaseTypeDispose(&n->base);
    SNetMemFree(n);
}

