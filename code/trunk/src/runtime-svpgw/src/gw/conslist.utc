void
SNetConsLstNodeAddDynGIdx(
    snet_conslst_node_t *n, const snet_idxvec_t *idx)
{
    assert(n != NULL);

    if (n->dyn_idx != NULL) {
        n->dyn_idx_cnt++;
        return;
    }

    n->dyn_idx = SNetIdxVecCreateCopy(idx, true);
}

void
SNetConsLstNodeAddSameDynGIdxAs(
    snet_conslst_node_t *n1, const snet_conslst_node_t *n2)
{
    assert(n1 != NULL);
    assert(n2 != NULL);
    assert(n1->dyn_idx == NULL);
    assert(n2->dyn_idx != NULL);

    n1->dyn_idx     = SNetIdxVecCreateCopy(n2->dyn_idx, true);
    n1->dyn_idx_cnt = n2->dyn_idx_cnt;
}

void
SNetConsLstNodeRemoveDynGIdx(snet_conslst_node_t *n)
{
    assert(n != NULL);
    
    if (n->dyn_idx == NULL) {
        return;
    }

    if (n->dyn_idx_cnt > 0) {
        n->dyn_idx_cnt--;
        return;
    }

    SNetIdxVecDestroy(n->dyn_idx);

    n->dyn_idx = NULL;
}

